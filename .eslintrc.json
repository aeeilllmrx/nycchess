{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["react", "import", "prettier"],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "import/newline-after-import": ["error", { "count": 1 }],
    "react/prop-types": "off",
    "indent": ["error", 2]
  }
}